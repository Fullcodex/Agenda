<div class="modal fade" id="modalUser" tabindex="-1" aria-labelledby="userInfos" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modification des informations</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="{{ path('updateUser',{'uneDate':Date.getmoisCourant.format('Y-m-d'),'id':User.id}) }}" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Nom prenom</label>
                        <input type="text" class="form-control" name="inputNomUser" value="{{ User.getNomPrenom }}">
                    </div>
                    <div class="form-group">
                        <label>Date de naissance</label>
                        <input type="date" class="form-control" name="inputDtNaissUser" value="{{ User.getDateNaissance == null ?: User.getDateNaissance.format('Y-m-d') }}">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="mail" class="form-control" name="inputEmailUser" value="{{ User.getEmail }}">
                    </div>
                    <div class="form-group">
                        <label>Modification du mot de passe</label>
                        <input type="password" name="inputPwd1" class="form-control" placeholder="Entrer le mot de passe">
                        <input type="password" name="inputPwd2" class="form-control mt-2" placeholder="Confirmer le mot de passe">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
</div>