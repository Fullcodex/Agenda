                            <button type="button" class="btn btn-sm btn-outline-dark" data-toggle="modal" data-target="#modalAgenda" data-whatever="{{ selectedAgenda.getId() }}"><i class="fas fa-tools"></i> Parametre agenda</button>
                        </div>
